generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lotes {
  id       Int       @id @default(autoincrement())
  nome     String
  ativo    String
  criadoEm DateTime  @default(now()) @map("criado_em")
  Tickets  Tickets[]

  @@map("lotes")
}

model Tickets {
  id             Int      @id @default(autoincrement())
  nomeSacado     String   @map("nome_sacado")
  idLote         Lotes    @relation(fields: [lotesId], references: [id])
  valor          Decimal
  linhaDigitavel String   @map("linha_digitavel")
  ativo          Boolean
  criadoEm       DateTime @map("criado_em")
  lotesId        Int

  @@map("tickets")
}
